- body_class 'blue game-area'

.container.container-narrow
  .center.bd-logo-fix.margin-top-lg= image_tag 'logos/logo-full_600-white.png', class: 'responsive-img margin-bottom-lg', alt: 'Bad Decisions'

  = simple_form_for @user, url: login_path, method: :post, html: { class: 'game-card card-story' } do |f|
    .card-input
      = f.label 'Hi, my name is', :username, class: 'not-blank first-slot', required: false
      = f.input_field :username, class: 'blank blank-fool', placeholder: 'Username'

    .card-input
      = f.label 'and my password is', :password, class: 'not-blank', required: false
      = f.input_field :password, class: 'blank blank-crisis', placeholder: 'Password'

    .not-blank
      and I would like to

    %button.blank.blank-decision.last.last-slot{type: 'submit'}
      .text= t('session.login')

  .margin-top-lg.center
    = link_to 'Continue as Guest', lobbies_path, class: 'btn full-width btn-large blue darken-2 last-slot'
